input {
      http_poller {
                   urls => {
                       fields => {
                             method => get
                             user => "${JIRA_USER}"
                             password => "${JIRA_PWD}"
                             url => "https://epm.verisk.com/jira/rest/api/2/field"
                             headers => {
                                     Accept => "application/json"
                             }
                        }
               }
               schedule => { every => "60d"}
               codec => "json"
       }
}

output {
         elasticsearch {
                hosts => ["elasticsearch:9200"]
                index => "jira-fields"
                }

       stdout { codec => "json" }
}