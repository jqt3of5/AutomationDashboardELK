input {
      http_poller {
                   urls => {
                       XMA => {
                             method => get
                             user => "${JIRA_USER}"
                             password => "${JIRA_PWD}"
                             url => "https://epm.verisk.com/jira/rest/api/2/search?jql=project=XMA&expand=changelog"
                             headers => {
                                     Accept => "application/json"
                             }
                        }
                   }
                   schedule => { every => "60s"}
                   codec => "json"
      }

}
filter {

 split {
  field => "[issues]"
 }
 
 mutate {
    remove_field => [ "[expand]", "[startAt]", "[total]", "[maxResults]"]
 }

}

output {
 pipeline { send_to => [jira_issues, jira_changes] }

}